    private void ComboBulanActionPerformed(java.awt.event.ActionEvent evt) {                                           
        
    }                                          

    private void ButtonHitungActionPerformed(java.awt.event.ActionEvent evt) {                                             
        // TODO add your handling code here:
        if(TahunField.getText().matches("[a-z]*")){
            JOptionPane.showMessageDialog(null,"Isi Dengan Angka!", "Peringatan",JOptionPane.WARNING_MESSAGE);
            
        }
        if(TahunField.getText().isEmpty()){
            JOptionPane.showMessageDialog(null,"Silahkan Isi Dengan Angka!","Peringatan",JOptionPane.WARNING_MESSAGE);
        }else{
            int tahun = Integer.parseInt(TahunField.getText());
            int jumlahhari;
            if(ComboBulan.getSelectedItem().equals("Februari")){
                if(((tahun%4==0)&&!(tahun%100==0))||(tahun%400==0))
                    jumlahhari = 29;
                else jumlahhari = 28;
            
            }else if(ComboBulan.getSelectedItem().equals("April")||
                    ComboBulan.getSelectedItem().equals("Juni")||
                    ComboBulan.getSelectedItem().equals("September")||
                    ComboBulan.getSelectedItem().equals("November")){
                jumlahhari = 31;
                
            }else{
                jumlahhari=30;
            }
            LabelHari.setText("Jumlah hari pada bulan "+ ComboBulan.getSelectedItem()+" tahun "+tahun+" adalah " + jumlahhari );
        }
        
    }                                            

    private void ButtonKeluarActionPerformed(java.awt.event.ActionEvent evt) {                                             
        // TODO add your handling code here:
        System.exit(0);
    }                                            

    private void ButtonHapusActionPerformed(java.awt.event.ActionEvent evt) {                                            
        // TODO add your handling code here:
        TahunField.setText("");
        ComboBulan.setSelectedItem("Januari");
        LabelHari.setText("Jumlah Hari");
    }                                           

    private void ButtonSimpanActionPerformed(java.awt.event.ActionEvent evt) {                                             
        // TODO add your handling code here:
        try{
            BufferedWriter out = new BufferedWriter(new FileWriter("JumlahHari.txt"));
            out.write(LabelHari.getText());
            JOptionPane.showMessageDialog(null, "Berhasil Disimpan");
            out.close();
        }catch (Exception e){
            System.err.println("Error: " + e.getMessage());
        }
    }                                            

